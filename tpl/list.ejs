<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <meta name="viewport"
          content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no,viewport-fit=cover">
    <!-- 最新版本的 Bootstrap 核心 CSS 文件 -->
    <link rel="stylesheet" href="../bootstrap.min.css">
    <script src="https://libs.baidu.com/jquery/2.0.0/jquery.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        body {
            padding: 30px;
        }

        .table-responsive {
            margin-top: 20px;
        }

        h4 {
            padding: 8px;
            font-weight: 600;
        }
    </style>
</head>
<body>
<div style="max-width: 640px;margin: 0 auto">
    <div class="option">
        <div class="row">
            <div class="col-lg-7 col-sm-7 col-md-7 col-xs-7">
                <div class="btn-group" role="group" aria-label="...">
                    <button type="button" class="btn btn-default change" data-toggle="0">金额总量(亿)</button>
                    <button type="button" class="btn btn-default change" data-toggle="1">占比总量</button>
                </div>
            </div>
            <div class="col-lg-5 col-sm-5 col-md-5 col-xs-5">
                <div class="input-group">
                    <input type="text" id="code" class="form-control" placeholder="长度..">
                    <span class="input-group-btn"><button id="search" class="btn btn-default" type="button">刷新</button></span>
                </div>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <h4>金额总量(亿)</h4>
        <table class="table">
            <% totalList.forEach(function(item){ %>
                <tr>
                    <td> <%- item.name %></td>
                    <td> <%- item.value %>亿元</td>
                </tr>
            <% }); %>
        </table>
    </div>
    <div style="display: none" class="table-responsive">
        <h4>比例总量</h4>
        <table class="table">
            <% scaleList.forEach(function(item){ %>
                <tr>
                    <td> <%- item.name %></td>
                    <td> <%- item.value %></td>
                </tr>
            <% }); %>
        </table>
    </div>
</div>
<script>
    $('.change').on('click', (e) => {
        const index = $(e.target).data('toggle')
        $('.table-responsive').hide().eq(index).show()
    })
    $('#search').on('click', () => {
        const code = $('#code').val();
        $.ajax({
            url: `${origin}/refresh/${code}`,
            type: "POST",
            dataType: "json",
            data: {},
            success: function () {
                toast('开始刷新...');
                setTimeout(() => {
                    location.reload()
                }, 1000)
            }
        })
    })

    function toast(mess) {
        var str = '<div class="mess"><span></span></div>';
        $("body").append(str);
        $(".mess").fadeIn().find("span").html(mess);
        setTimeout(function () {
            $(".mess").fadeOut();
        }, 2000)
    }
</script>
</body>
</html>
